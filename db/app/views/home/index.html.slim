header class="masthead home-index-#{[*1,2].sample}"
  .container
    .row
      .col-lg-8.col-md-10.mx-auto
        .site-heading
          h1 Zhonggang - (John)
          span.subheading Madison,WI,53705
.container
  .row
    .col-lg-8.col-md-10.mx-auto
      - @articles.each do |article|
        .post-preview
          = link_to article_path(article) do
            h2.post-title #{article.title}
            h3.post-subtitle #{article.subtitle}
          p.post-meta
            |Posted by
            '
            = link_to 'John', article_path(article)
            '
            |on #{format_date article.created_at}
        hr
      - unless @articles.blank?
        .clearfix
          = link_to 'Older Posts â†’', articles_path, class: 'btn btn-primary float-right'
